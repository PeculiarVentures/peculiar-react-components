{
  "name": "@peculiar/react-components",
  "version": "0.0.0",
  "private": false,
  "description": "React components & styles",
  "keywords": [
    "react",
    "components",
    "styles",
    "theme",
    "ui"
  ],
  "author": "PeculiarVentures Team",
  "homepage": "https://github.com/PeculiarVentures/react-components#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/react-components.git"
  },
  "scripts": {
    "compile": "npm-run-all clean compile:*",
    "compile:esm": "tsc -p .",
    "compile:cjs": "tsc -p . -m commonjs --outDir dist/cjs",
    "compile:esnext": "tsc -p . -t esnext --outDir dist/esnext",
    "compile:css": "sass src/styles/:./css --no-source-map --style=compressed",
    "compile:theme": "node scripts/themeCreate",
    "clean": "rimraf css && rimraf dist",
    "storybook": "start-storybook -p 3000 -s ./css",
    "dev": "npm run storybook",
    "test:karma": "karma start",
    "test:karma:debug": "karma start --single-run=false --reporters=mocha --debug"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "esnext": "dist/esnext/index.js",
  "typings": "dist/types/index.d.ts",
  "style": "css/index.css",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/react-components/issues"
  },
  "dependencies": {
    "clsx": "^1.1.0",
    "tslib": "^1.11.1"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@peculiar/karma-scripts": "^0.0.0",
    "@peculiar/ui-theming": "^0.0.0",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-info": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@types/chai": "^4.2.11",
    "@types/storybook__addon-info": "^5.2.1",
    "@types/storybook__react": "^5.2.1",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "karma": "^4.4.1",
    "npm-run-all": "^4.1.5",
    "react-docgen-typescript-loader": "^3.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.26.2",
    "ts-loader": "^6.2.1"
  },
  "files": [
    "dist/",
    "css/"
  ]
}
