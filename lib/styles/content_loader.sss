@keyframes lineeee
  0%
    stop-opacity: 0.4
  50%
    stop-opacity: 1
  100%
    stop-opacity: 0.4
  
.content_loader
  display: block
  &_color
    @each $key in $colors
      &_$(key)
        stop-color: rgb(var(--$(key)))
        stop-opacity: 0.4
  stop
    &:nth-child(1)
      animation: lineeee 2s infinite 0.2s
    &:nth-child(2)
      animation: lineeee 2s infinite 0.4s
    &:nth-child(3)
      animation: lineeee 2s infinite 0.6s