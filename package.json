{
  "name": "lib-react-components",
  "version": "0.4.0",
  "description": "React components",
  "keywords": [
    "react",
    "react-components",
    "components",
    "ui",
    "javascript"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "test": "jest --coverage",
    "lint": "tslint --format stylish lib/**/**/*.{ts,tsx}",
    "clean": "rimraf commonjs && rimraf esm",
    "prebuild": "npm run clean",
    "build": "npm run build:esm && npm run build:cjs && npm run build:css",
    "build:esm": "tsc",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:css": "node ./scripts/build_theme.js",
    "storybook": "npm run build:css && start-storybook -p 3000 -s ./dist/themes",
    "coverage:deploy": "cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "name": "cjs",
      "path": "dist/cjs/**/*.js",
      "webpack": false
    },
    {
      "name": "esm",
      "path": "dist/esm/**/*.js",
      "webpack": false
    },
    {
      "name": "css",
      "path": "dist/themes/default.css",
      "webpack": false
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeculiarVentures/react-components.git"
  },
  "author": "PeculiarVentures.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PeculiarVentures/react-components/issues"
  },
  "homepage": "https://PeculiarVentures.github.io/react-components/",
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.8.6",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-options": "^5.0.11",
    "@storybook/addon-storysource": "^5.0.11",
    "@storybook/addon-viewport": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.14",
    "@types/storybook__addon-info": "^4.1.1",
    "@types/storybook__addon-knobs": "^5.0.0",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "coveralls": "^3.0.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "lib-theme-contructor": "0.0.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "size-limit": "^1.3.5",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "LICENSE.md",
    "README.md",
    "lib/",
    "dist/"
  ]
}
